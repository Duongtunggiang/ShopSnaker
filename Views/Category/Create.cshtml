@model NewShop.Models.Category

@{
    Layout = "~/Views/Shared/SalerLayout.cshtml";
    ViewBag.Title = "Thêm danh mục";
}

<h2>Thêm danh mục</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName)
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
}
<a href='@Url.Action("CreateProduct","Saler")' class="btn btn-outline-danger">Thoát</a>