@model IEnumerable<NewShop.Models.Product>

@{
    Layout = "~/Views/Shared/SalerLayout.cshtml";
    ViewBag.Title = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>
<a href="@Url.Action("CreateProduct", "Saler")" class="btn btn-primary mb-3">Thêm sản phẩm mới</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Giảm giá</th>
            <th>Số lượng</th>
            <th>Màu sắc</th>
            <th>Kiểu dáng</th>
        <th>Ảnh</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Discount</td>
                <td>@product.Quality</td>
                <td>@product.Color</td>
                <td>@product.Style</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ProductImagePath))
                    {
                        <img src="@Url.Content(product.ProductImagePath)" alt="@product.ProductName" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>// Hoặc một biểu tượng thay thế
                    }
                </td>

                <td>@product.Category.CategoryName</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Saler", new { id = product.ProductID })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteProduct", "Saler", new { id = product.ProductID })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
